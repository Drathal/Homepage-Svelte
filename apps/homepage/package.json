{
  "name": "@drathal/homepage",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "scripts": {
    "prepare": "svelte-kit sync",
    "sync-components": "pnpm --filter components prepare",
    "dev": "ORIGIN=* vite dev",
    "build": "vite build; npm run build:clear; npm run build:copy",
    "build:clear":"find ../../.vercel -maxdepth 5 | egrep -v \"project.json|README.txt\" | xargs rm ; rm -fr ../../.vercel/output/static/*",
    "build:copy":"cp -a .vercel/* ../../.vercel",
    "preview": "vite preview",
    "test": "playwright test",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "test:unit": "vitest",
    "lint": "prettier --plugin-search-dir . --check . && eslint .",
    "format": "prettier --plugin-search-dir . --write ."
  },
  "dependencies": {
    "@drathal/components": "workspace:*",
    "mdsvex": "^0.10.6",
    "svelte": "^3.56.0"
  },
  "devDependencies": {
    "@sveltejs/adapter-vercel": "^2.3.1",
    "@sveltejs/kit": "^1.11.0",
    "front-matter": "^4.0.2",
    "autoprefixer": "^10.4.14",
    "cssnano": "^5.1.15",
    "postcss": "^8.4.21",
    "sass": "^1.59.2",
    "svelte-check": "^3.1.4",
    "svelte-preprocess": "^5.0.1",
    "vite": "^4.1.4",
    "vitest": "^0.29.2"
  }
}
